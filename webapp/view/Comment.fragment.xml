<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc">
    <Dialog id="_IDGenDialog2" title="Contact Me">

        <l:VerticalLayout id="_IDGenVerticalLayout1" class="sapUiContentPadding" width="100%">
            <Label id="_IDGenLabel1" text="Name" labelFor="nameInput" />
            <Input id="nameInput" placeholder="Enter Your Name" width="100%" />

            <Label id="_IDGenLabel2" text="Email" labelFor="emailInput" required="true" />
            <Input id="emailInput" type="Email" placeholder="Enter Your Email" width="100%" />

            <Label id="_IDGenLabel3" text="Phone" labelFor="phoneInput" />
            <Input id="phoneInput" type="Tel" placeholder="Enter Your Phone" width="100%"/>

            <Label id="_IDGenLabel4" text="Comment" />
            <TextArea id="_IDGenTextArea1" value="Lorem ipsum dolor" growing="true" width="100%" height="400%"/>

        </l:VerticalLayout>
        <FlexBox id="_IDGenFlexBx1" height="50px" alignItems="Center" justifyContent="Center">
            <Button id="_IDGenButto1" text="Submit" type="Emphasized" class="sapUiSmallMarginEnd"  press="handleOpenDialog" />
            <Button id="_IDGenButto2" text="Close" type="Reject"  press="handleCloseDialog" />

        </FlexBox>

    </Dialog>

</core:FragmentDefinition>